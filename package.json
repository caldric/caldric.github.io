{
  "name": "portfolio",
  "version": "1.0.0",
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "main": "server.js",
  "repository": "https://github.com/caldric/portfolio.git",
  "author": "caldric <cvaldric@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cd client && yarn build",
    "install-client": "cd client && yarn install",
    "heroku-postbuild": "yarn install-client && yarn build",
    "start": "node server.js",
    "client": "cd client && yarn start",
    "dev": "concurrently -n 'server,client' -c 'red,green' 'nodemon server.js' 'yarn client'"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
